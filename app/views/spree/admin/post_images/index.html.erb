<%= render partial: 'spree/admin/shared/contents_sub_menu' %>
<%= render partial: 'spree/admin/shared/post_tabs', locals: {current: "Images"} %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_image), new_admin_post_image_url(@post), :class => "btn-success", :icon => 'plus', :id => 'admin_new_image' %>
<% end %>

<div id="images" data-hook></div>

<% unless @post.images.any? %>
  <div class="no-objects-found">
    <%= Spree.t(:no_images_found) %>.
  </div>
<% else %>
  <table class="table sortable" data-hook="images_table" data-sortable-link="<%= update_positions_admin_post_images_url(@post) %>">
    <thead>
      <tr>
        <th colspan="2"><%= Spree.t("thumbnail") %></th>
        <th><%= Spree.t(:alt_text) %></th>
        <th data-hook="admin_post_images_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @post.images.each do |image| %>
        <tr id="<%= spree_dom_id image %>" data-hook="images_row">
          <td class="move-handle text-center">
            <% if can? :edit, image %>
              <span class="icon icon-move handle"></span>
            <% end %>
          </td>
          <td><%= link_to(image_tag(image.attachment.url(:small)), image.attachment.url(:large)) %></td>
          <td><%= image.alt %></td>
          <td class="actions" data-hook="admin_post_images_index_row_actions">
            <%= link_to_with_icon 'edit', Spree.t(:edit), edit_admin_post_image_path(@post, image), no_text: true, data: {action: 'edit'} %>
            &nbsp;
            <%= link_to_delete image, no_text: true, url: admin_post_image_url(@post, image) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% content_for :head do %>
  <script type="text/javascript">
    jQuery(document).ready(function(){
      jQuery('#new_image_link').click(function (event) {
        event.preventDefault();
        jQuery(this).hide();
        jQuery.ajax({type: 'GET', url: this.href, data: ({authenticity_token: AUTH_TOKEN}), success: function(r){ jQuery('#images').html(r);} });
      });
    });
  </script>
<% end %>
