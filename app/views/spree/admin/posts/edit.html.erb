<% content_for :page_actions do %>
    <%= button_link_to Spree.t(:preview), post_seo_path(@post.blog.name, @post), icon: 'eye-open' %>
<% end %>

<%= render partial: 'spree/admin/shared/post_tabs', locals: {current: "Post Details"} %>
<% if @post.try(:errors).present? %><%= render 'spree/shared/error_messages', target: @post %><% end %>

<%= form_for([:admin, @post]) do |f| %>
  <fieldset>
    <%= render "form", form: f %>
    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t(:update), 'refresh' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t(:cancel), admin_posts_path, icon: 'remove' %>
    </div>
  </fieldset>
<% end %>
